{
  "name": "@vangware/micro",
  "description": "Vangware functional utils library",
  "version": "6.0.0",
  "author": {
    "name": "Vangware",
    "url": "https://vangware.com"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "src/tests/*.test.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "bugs": {
    "url": "https://github.com/vangware/micro/issues"
  },
  "devDependencies": {
    "@types/sinon": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "@vangware/vangstyle": "^4.2.1",
    "ava": "^3.8.2",
    "coveralls": "^3.1.0",
    "custom-event": "^1.0.1",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-node": "^0.3.3",
    "eslint-plugin-ban": "^1.5.1",
    "eslint-plugin-functional": "^3.0.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.1",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-order": "^4.0.0",
    "stylelint-prettier": "^1.1.2",
    "ts-node": "^8.10.1",
    "typedoc": "^0.17.6",
    "typescript": "^3.8.3"
  },
  "files": [
    "cjs",
    "esm"
  ],
  "homepage": "https://micro.vangware.com",
  "husky": {
    "hooks": {
      "pre-commit": "run-s clean pre-compile lint test docs"
    }
  },
  "keywords": [
    "array",
    "constants",
    "esm",
    "micro",
    "object",
    "pure",
    "string",
    "types",
    "typescript",
    "utils",
    "vangware"
  ],
  "license": "MIT",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.test.ts",
      "src/tests/**",
      "src/types/**"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/vangware/micro.git"
  },
  "scripts": {
    "clean": "rimraf ./{cjs,esm}",
    "compile": "run-s compile:*",
    "compile:cjs": "tsc --project tsconfig.cjs.json",
    "compile:esm": "tsc --project tsconfig.esm.json",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "docs": "typedoc --gitRevision master --mode file --out ./docs ./src/*.ts",
    "lint": "eslint src/**/*.ts",
    "pre-compile": "run-s pre-compile:*",
    "pre-compile:cjs": "tsc --noemit --project tsconfig.cjs.json",
    "pre-compile:esm": "tsc --noemit --project tsconfig.esm.json",
    "prepublishOnly": "run-s compile",
    "prettify": "run-s prettify:*",
    "prettify:cjs": "prettier --write './cjs/**/*.{js,ts}'",
    "prettify:esm": "prettier --write './esm/**/*.{js,ts}'",
    "test": "nyc ava",
    "test:watch": "ava --watch"
  },
  "source": "./src/index.ts",
  "types": "./esm/index.d.ts"
}
