{
  "name": "@vangware/micro",
  "description": "Vangware utils library",
  "version": "2.1.0",
  "author": {
    "name": "Vangware",
    "url": "https://vangware.com"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts",
      "!src/tests"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "bugs": {
    "url": "https://github.com/vangware/micro/issues"
  },
  "dependencies": {
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@types/prettier": "1.18.3",
    "@types/sinon": "7.5.0",
    "@vangware/vangstyle": "^1.4.4",
    "ava": "^2.4.0",
    "coveralls": "^3.0.7",
    "custom-event": "^1.0.1",
    "husky": "3.0.9",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "sinon": "7.5.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.4"
  },
  "files": [
    "cjs",
    "esm"
  ],
  "homepage": "https://github.com/vangware/micro#readme",
  "husky": {
    "hooks": {
      "pre-commit": "run-s clean pre-compile lint test"
    }
  },
  "keywords": [
    "array",
    "constants",
    "esm",
    "micro",
    "object",
    "string",
    "types",
    "typescript",
    "utils",
    "vangware"
  ],
  "license": "MIT",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.test.ts",
      "src/tests/**",
      "src/types/**"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/vangware/micro.git"
  },
  "scripts": {
    "clean": "rimraf ./{cjs,esm}",
    "compile": "run-s compile:*",
    "compile:cjs": "tsc --project tsconfig.cjs.json",
    "compile:esm": "tsc --project tsconfig.esm.json",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "tslint -c ./tslint.json -p .",
    "pre-compile": "run-s pre-compile:*",
    "pre-compile:cjs": "tsc --noemit --project tsconfig.cjs.json",
    "pre-compile:esm": "tsc --noemit --project tsconfig.esm.json",
    "prepublishOnly": "run-s compile",
    "prettify": "run-s prettify:*",
    "prettify:cjs": "prettier --write './cjs/**/*.{js,ts}'",
    "prettify:esm": "prettier --write './esm/**/*.{js,ts}'",
    "test": "nyc ava",
    "test:watch": "ava --watch"
  },
  "source": "./src/index.ts",
  "types": "./esm/index.d.ts"
}
